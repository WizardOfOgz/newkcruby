<div style="border-bottom:2px solid lightgray;">
  <h1 class="blog-title"><%= blog.title %></h1>
          <h6>
            <%= blog.created_at.strftime("%b %d, %Y") %>

          </h6>       
          <p class="message">
            <%= truncate(blog.message, length: 50, separator: ' ') %> &nbsp; <%= link_to 'Read more', blog_path(blog), method: :get %>
          </p>  
          <p>
            <em>written by &nbsp;&nbsp;</em>
              <% if signed_in? %>
              <%= link_to blog.user.name, user_path(blog.user) %>
              <% else %>
              <%= blog.user.name %>
              <% end %>
          </p>
          <% if blog.user == current_user %>
<%= link_to 'edit', edit_blog_path(blog), method: :get %>&nbsp;|&nbsp;
      <%= link_to 'delete', blog, method: :delete,
         data: { confirm: "You sure?" }%>
<% end %>
</div>
